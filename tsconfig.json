{
  "compilerOptions": {
    "target": "ES2020",                          
    "module": "CommonJS",                        
    "lib": ["ES2020"],                           
    "outDir": "./dist",                          
    "rootDir": "./src",                          
    "strict": true,                              
    "moduleResolution": "node",                  
    "esModuleInterop": true,                     
    "forceConsistentCasingInFileNames": true,    
    "skipLibCheck": true,                        
    "resolveJsonModule": true,                   
    "allowJs": false,                            
    "noImplicitAny": true,                       
    "noUnusedLocals": true,                      
    "noUnusedParameters": true,                  
    "typeRoots": ["./node_modules/@types", "./types"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
